{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@config/*": ["src/config/*"],
        "@helpers/*": ["src/helpers/*"],
        "@fixtures/*": ["src/fixtures/*"],
        "@utils/*": ["src/utils/*"],
        "@tests/*": ["src/tests/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "test-results", "playwright-report"]
  }
  